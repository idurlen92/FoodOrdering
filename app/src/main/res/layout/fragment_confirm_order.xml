<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:gravity="center"
             tools:context="com.idurlen.foodordering.view.fragment.ConfirmOrderFragment">

    <ProgressBar
        android:id="@+id/pbConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ScrollView
        android:id="@+id/layoutConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvOrderDateTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/title_order_date"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_toRightOf="@id/tvOrderDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDeliveryTimeTitle"
                android:layout_below="@id/tvOrderDateTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="@string/title_order_time"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spDeliveryTIme"
                android:layout_below="@id/tvDeliveryTimeTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
           <!-- -->
            <TextView
                android:id="@+id/tvOrderAddressTitle"
                android:layout_below="@id/spDeliveryTIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:text="@string/title_order_address"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/spOrderAddress"
                android:layout_below="@id/tvOrderAddressTitle"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutOrderAltAddress"
                android:layout_below="@id/spOrderAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <EditText
                    android:id="@+id/etOrderAltAddress"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_order_alt_address"
                    android:textSize="13dp"
                    android:inputType="textPostalAddress"/>
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/layoutOrderItems"
                android:layout_below="@id/layoutOrderAltAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"/>
            <TextView
                android:id="@+id/tvOrderTotalTitle"
                android:layout_below="@id/layoutOrderItems"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/title_order_total"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvOrderTotal"
                android:layout_below="@id/layoutOrderItems"
                android:layout_toRightOf="@id/tvOrderTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bConfirmOrder"
                android:layout_below="@id/tvOrderTotalTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:text="@string/action_confirm_order"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
