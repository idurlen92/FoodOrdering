<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvRestaurantItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:textColor="#1a1a1a"/>
    <TextView
        android:id="@+id/tvRestaurantItemWorking"
        android:layout_toLeftOf="@id/tvRestaurantItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tvRestaurantItemDesription"
        android:layout_below="@id/tvRestaurantItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvRestaurantItemAddress"
        android:layout_below="@id/tvRestaurantItemDesription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>